@model List<GetProductVM>
@{
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Products</h4>
                <a asp-controller="product" asp-action="create" class="btn btn-success"> Create </a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    SKU
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetProductVM productVM in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/website-images/@productVM.MainImage" />
                                    </td>
                                    <td>
                                        @productVM.Name
                                    </td>
                                    <td>
                                        @productVM.Price
                                    </td>
                                    <td>
                                        @productVM.SKU
                                    </td>
                                    <td>
                                        @productVM.CategoryName
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@productVM.Id" class="btn btn-warning"> <i class="mdi mdi-pencil-box"></i></a>
                                        <a asp-action="delete" asp-route-id="@productVM.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></a>
                                        <a asp-action="detail" asp-route-id="@productVM.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>